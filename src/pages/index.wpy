<style lang="scss">
@import "~@/style/style.scss";
page {
  background-color: $BgColorDefault;
}
.foot {
  height: 400rpx;
}
.btn-container {
  position: fixed;
  justify-content: center;
  display: flex;
  bottom: 100rpx;
  width: 100%;
  .add {
    box-shadow: 0 6px 30px 0 rgba(0,0,0,.1);
    font-weight: bold;
    height: 120rpx;
    width: 240rpx;
    line-height: 120rpx;
    border-radius: 60rpx;
    background-color: $ColorPrimary;
    color: $TextColorInverse;
    text-align: center;
  }
}
</style>

<template lang="pug">
  recordList(:scrollTop.sync='scrollTop')
  .foot
  .btn-container
    .add(@tap='openPanel') 添加记录
  panel
</template>
  
<script>
import wepy from '@wepy/core';
import store from '@/store';
wepy.page({
  data: {
    scrollTop: 0,
    addPanelShow: false,
  },
  methods: {
    triggerAddPanel() {
      this.$bus.$emit('trigger:addPanel');
    },
    openPanel() {
      wx.showActionSheet({
        itemList: ['喂奶瓶', '哺乳', '换尿布', '睡觉'],
        success: res => {
          const { tapIndex } = res;
          console.log(tapIndex);
          let cate;
          switch (tapIndex) {
            case 0:
              cate = '喂奶瓶';
              break;
            case 1:
              cate = '哺乳';
              break;
            case 2:
              cate = '换尿布';
              break;
            case 3:
              cate = '睡觉';
              break;
            default: 
              cate = '喂奶瓶';
          }
          console.log(tapIndex,cate);
          
          this.$bus.$emit('open:panel', {
            opt: 'add',
            cate,
            record: {},
          })
        }
      })

    }
  },
  onLoad() {},
  onPageScroll(event) {
    this.scrollTop = event.scrollTop;
  },
  onShareAppMessage() {
    return {
      title: '来用我这个新小程序看看',
      imageUrl: '/images/cover.jpg'
    }
  }
});
</script>
<config>
{
  navigationBarTitleText: '🍼喂奶记录',
  usingComponents: {
    'recordList': '~@/components/recordList',
    'panel': '~@/components/panel'
  },
  enablePullDownRefresh: false
}
</config>
